<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
			xmlns:app="http://schemas.android.com/apk/res-auto"
			xmlns:tools="http://schemas.android.com/tools"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:fillViewport="true"
			tools:context=".PropertyActivity">

	<LinearLayout
			android:id="@+id/linearLayout"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical">

		<android.support.constraint.ConstraintLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				app:layout_constraintBottom_toBottomOf="parent"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toTopOf="parent">

			<android.support.v4.view.ViewPager
					android:layout_width="0dp"
					android:layout_height="250dp"
					app:layout_constraintStart_toStartOf="parent"
					app:layout_constraintEnd_toEndOf="parent"
					app:layout_constraintTop_toTopOf="parent"
					android:id="@+id/viewPager_property_slider"/>

			<com.rd.PageIndicatorView
					android:id="@+id/pageIndicatorView_property_slider"
					app:piv_viewPager="@id/viewPager_property_slider"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginBottom="8dp"
					app:layout_constraintBottom_toBottomOf="@+id/viewPager_property_slider"
					app:layout_constraintEnd_toEndOf="parent"
					android:layout_marginEnd="8dp"
					app:layout_constraintStart_toStartOf="parent"
					android:layout_marginStart="8dp"
					app:piv_padding="12dp"
					app:piv_radius="6dp"
					app:piv_animationType="worm"/>

			<TextView
					android:id="@+id/text_property_title"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_marginStart="16dp"
					android:layout_marginEnd="16dp"
					android:text="@string/title_property"
					android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
					app:layout_constraintEnd_toStartOf="@+id/btn_save_property"
					app:layout_constraintStart_toStartOf="parent"
					android:layout_marginTop="8dp"
					app:layout_constraintTop_toBottomOf="@+id/viewPager_property_slider"
					android:textStyle="bold"/>

			<TextView
					android:id="@+id/text_property_price"
					android:layout_height="wrap_content"
					android:layout_marginStart="16dp"
					android:layout_marginTop="8dp"
					android:text="@string/msg_property_price"
					app:layout_constraintStart_toStartOf="parent"
					app:layout_constraintTop_toBottomOf="@+id/text_property_title"
					android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle2"
					android:textColor="@color/colorAccent"
					android:textSize="18sp" android:layout_marginEnd="16dp"
					app:layout_constraintEnd_toStartOf="@+id/btn_save_property"
					app:layout_constraintHorizontal_bias="0.0"
					android:layout_width="0dp"/>

			<TextView
					android:id="@+id/text_property_publication_date"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_marginStart="16dp"
					android:text="@string/msg_property_publication_date"
					app:layout_constraintStart_toStartOf="parent"
					app:layout_constraintTop_toBottomOf="@+id/text_property_location"
					android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
					android:layout_marginEnd="16dp"
					app:layout_constraintEnd_toStartOf="@+id/btn_save_property"
					app:layout_constraintHorizontal_bias="0.0"
					app:layout_constraintBottom_toBottomOf="parent"
					android:layout_marginBottom="8dp"/>
			<TextView
					android:id="@+id/text_property_location"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_marginStart="16dp"
					android:text="@string/msg_property_location"
					app:layout_constraintStart_toStartOf="parent"
					android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
					app:layout_constraintTop_toBottomOf="@+id/text_property_price"
					app:layout_constraintEnd_toStartOf="@+id/btn_save_property"
					android:layout_marginEnd="16dp"
					app:layout_constraintHorizontal_bias="0.0"
					android:layout_marginTop="16dp"/>
			<ToggleButton
					android:id="@+id/btn_save_property"
					android:layout_width="24dp"
					android:layout_height="24dp"
					android:layout_marginEnd="16dp"
					android:layout_marginBottom="16dp"
					android:background="@drawable/button_favorite"
					app:layout_constraintBottom_toBottomOf="parent"
					app:layout_constraintEnd_toEndOf="parent"
					android:text=""
					android:textOff=""
					android:textOn=""
					android:layout_marginTop="8dp"
					app:layout_constraintTop_toBottomOf="@+id/viewPager_property_slider"/>

		</android.support.constraint.ConstraintLayout>

		<android.support.constraint.ConstraintLayout
				android:layout_width="match_parent"
				android:layout_height="0dp"
				android:layout_weight="1">

			<TextView
					android:id="@+id/text_property_descriptionTitle"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_marginStart="16dp"
					android:layout_marginTop="8dp"
					android:layout_marginEnd="16dp"
					android:text="@string/msg_property_descriptionTitle"
					android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
					app:layout_constraintEnd_toEndOf="parent"
					app:layout_constraintStart_toStartOf="parent"
					app:layout_constraintTop_toTopOf="parent"/>

			<TextView
					android:id="@+id/text_property_description"
					android:layout_width="0dp"
					android:layout_height="0dp"
					android:layout_marginStart="16dp"
					android:layout_marginTop="8dp"
					android:layout_marginEnd="16dp"
					android:text="@string/msg_property_description"
					app:layout_constraintEnd_toEndOf="parent"
					app:layout_constraintStart_toStartOf="parent"
					app:layout_constraintTop_toBottomOf="@+id/text_property_descriptionTitle"
					android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
					android:layout_marginBottom="8dp"
					app:layout_constraintBottom_toBottomOf="parent"/>

		</android.support.constraint.ConstraintLayout>

		<android.support.constraint.ConstraintLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content">

			<TextView
					android:id="@+id/text_property_seller_name"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_marginStart="16dp"
					android:layout_marginTop="16dp"
					android:text="@string/msg_property_seller_name"
					app:layout_constraintStart_toStartOf="parent"
					android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
					app:layout_constraintEnd_toEndOf="parent"
					android:layout_marginEnd="16dp"
					app:layout_constraintTop_toTopOf="parent"
					app:layout_constraintHorizontal_bias="0.0"/>

			<TextView
					android:id="@+id/text_property_seller_mail"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_marginStart="16dp"
					android:text="@string/msg_property_seller_mail"
					app:layout_constraintStart_toStartOf="parent"
					app:layout_constraintTop_toBottomOf="@+id/text_property_seller_name"
					android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
					app:layout_constraintEnd_toEndOf="parent"
					android:layout_marginEnd="16dp"
					app:layout_constraintHorizontal_bias="0.0"/>

			<TextView
					android:id="@+id/text_property_seller_number"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_marginStart="16dp"
					android:layout_marginBottom="16dp"
					android:text="@string/msg_property_seller_number"
					app:layout_constraintBottom_toBottomOf="parent"
					app:layout_constraintStart_toStartOf="parent"
					app:layout_constraintTop_toBottomOf="@+id/text_property_seller_mail"
					android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
					app:layout_constraintEnd_toEndOf="parent"
					android:layout_marginEnd="16dp"
					app:layout_constraintHorizontal_bias="0.0"/>
		</android.support.constraint.ConstraintLayout>

	</LinearLayout>
</ScrollView>