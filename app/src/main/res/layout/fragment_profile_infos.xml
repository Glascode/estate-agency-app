<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="match_parent">

	<ImageView
			android:layout_width="300dp"
			android:layout_height="300dp"
			app:srcCompat="@drawable/ic_account_circle"
			android:id="@+id/img_profile_create"
			app:layout_constraintEnd_toEndOf="parent"
			android:layout_marginEnd="8dp"
			app:layout_constraintStart_toStartOf="parent"
			android:layout_marginStart="8dp"
			app:layout_constraintTop_toTopOf="parent"
			android:layout_marginTop="32dp"
			android:contentDescription="@string/profile_image_desc"/>

	<TextView
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:text="@string/profile_infos_name"
			app:layout_constraintTop_toBottomOf="@+id/img_profile_create"
			app:layout_constraintStart_toStartOf="@+id/img_profile_create"
			android:layout_marginTop="64dp"
			android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
			android:id="@+id/text_profile_infos_name"
			app:layout_constraintEnd_toEndOf="@+id/img_profile_create"/>

	<TextView
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:text="@string/profile_infos_mail"
			app:layout_constraintStart_toStartOf="@+id/img_profile_create"
			android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
			android:id="@+id/text_profile_infos_mail"
			android:layout_marginTop="8dp"
			app:layout_constraintTop_toBottomOf="@+id/textView7"
			app:layout_constraintEnd_toEndOf="@+id/img_profile_create"/>

	<TextView
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:text="@string/profile_infos_phone"
			app:layout_constraintStart_toStartOf="@+id/img_profile_create"
			android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
			android:id="@+id/text_profile_infos_phone"
			android:layout_marginTop="8dp"
			app:layout_constraintTop_toBottomOf="@+id/textView9"
			app:layout_constraintEnd_toEndOf="@+id/img_profile_create"/>

	<TextView
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:text="@string/profile_infos_name_value"
			android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
			app:layout_constraintEnd_toEndOf="@+id/text_profile_infos_phone"
			android:id="@+id/textView8"
			app:layout_constraintTop_toBottomOf="@+id/text_profile_infos_phone"
			app:layout_constraintStart_toStartOf="@+id/text_profile_infos_phone"
			android:textSize="18sp"/>

	<TextView
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:text="@string/profile_infos_name_value"
			android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
			app:layout_constraintTop_toBottomOf="@+id/text_profile_infos_mail"
			app:layout_constraintStart_toStartOf="@+id/text_profile_infos_mail"
			app:layout_constraintEnd_toEndOf="@+id/text_profile_infos_mail"
			android:id="@+id/textView9" android:textSize="18sp"/>

	<TextView
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:text="@string/profile_infos_name_value"
			android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
			app:layout_constraintTop_toBottomOf="@+id/text_profile_infos_name"
			app:layout_constraintStart_toStartOf="@+id/text_profile_infos_name"
			app:layout_constraintEnd_toEndOf="@+id/text_profile_infos_name"
			android:id="@+id/textView7" android:textSize="18sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>