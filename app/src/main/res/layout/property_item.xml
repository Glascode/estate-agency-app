<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

	<ImageView
			android:id="@+id/image_item_property"
			android:layout_width="100dp"
			android:layout_height="0dp"
			android:layout_marginStart="16dp"
			android:layout_marginTop="16dp"
			android:layout_marginBottom="16dp"
			android:contentDescription="@string/msg_property_image_desc"
			android:scaleType="centerCrop"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintVertical_bias="0.0"/>

	<TextView
			android:id="@+id/text_property_item_title"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginStart="8dp"
			android:layout_marginTop="16dp"
			android:layout_marginEnd="16dp"
			android:text="TextView"
			android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
			app:layout_constraintEnd_toStartOf="@+id/btn_save_property_item"
			app:layout_constraintHorizontal_bias="0.0"
			app:layout_constraintStart_toEndOf="@+id/image_item_property"
			app:layout_constraintTop_toTopOf="parent"/>

	<TextView
			android:id="@+id/text_property_item_price"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginStart="8dp"
			android:layout_marginTop="4dp"
			android:layout_marginEnd="16dp"
			android:text="TextView"
			app:layout_constraintHorizontal_bias="0.0"
			app:layout_constraintStart_toEndOf="@+id/image_item_property"
			app:layout_constraintTop_toBottomOf="@+id/text_property_item_title"
			app:layout_constraintEnd_toStartOf="@+id/btn_save_property_item"
			android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle2"
			android:textColor="@color/colorPrimary" android:textSize="18sp"/>

	<TextView
			android:id="@+id/text_property_item_location"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginStart="8dp"
			android:text="TextView"
			app:layout_constraintStart_toEndOf="@+id/image_item_property"
			app:layout_constraintTop_toBottomOf="@+id/text_property_item_price"
			android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
			app:layout_constraintEnd_toStartOf="@+id/btn_save_property_item"
			android:layout_marginEnd="16dp"/>

	<TextView
			android:id="@+id/text_property_item_publication_date"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginStart="8dp"
			android:layout_marginBottom="16dp"
			android:text="TextView"
			android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintStart_toEndOf="@+id/image_item_property"
			app:layout_constraintTop_toBottomOf="@+id/text_property_item_location"
			app:layout_constraintEnd_toStartOf="@+id/btn_save_property_item"
			android:layout_marginEnd="16dp"/>

	<ToggleButton
			android:id="@+id/btn_save_property_item"
			android:layout_width="24dp"
			android:layout_height="24dp"
			android:layout_marginTop="16dp"
			android:layout_marginEnd="16dp"
			android:background="@drawable/button_favorite"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintTop_toTopOf="parent"
			android:text=""
			android:textOff=""
			android:textOn=""
			android:layout_marginBottom="16dp"
			app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
